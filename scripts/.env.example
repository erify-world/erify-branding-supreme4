# ERIFY Campaign Reporting Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATA SOURCE API CONFIGURATIONS
# =============================================================================

# Google Analytics Configuration
GA_VIEW_ID=your_google_analytics_view_id

# Twitter/X API Configuration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Facebook API Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ERIFY Dashboard API Configuration
ERIFY_DASHBOARD_API=https://api.erify.com/v1
ERIFY_API_KEY=your_erify_api_key

# =============================================================================
# EMAIL DELIVERY CONFIGURATION
# =============================================================================

# SMTP Server Settings
SMTP_SERVER=smtp.gmail.com
SMTP_USERNAME=your_email@company.com
SMTP_PASSWORD=your_app_password

# Report Recipients (comma-separated)
REPORT_EMAIL_RECIPIENTS=team@erify.com,analytics@erify.com,executives@erify.com

# =============================================================================
# SLACK DELIVERY CONFIGURATION
# =============================================================================

# Slack Webhook URL for campaign reports
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# Report Storage Configuration (optional)
REPORT_STORAGE_BUCKET=erify-campaign-reports
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Dashboard URLs (for links in reports)
ERIFY_DASHBOARD_URL=https://dashboard.erify.com
ANALYTICS_DASHBOARD_URL=https://analytics.erify.com

# Alert Thresholds (override config.yml if needed)
ENGAGEMENT_DROP_THRESHOLD=15
CONVERSION_RATE_THRESHOLD=2
TRAFFIC_SPIKE_THRESHOLD=50

# =============================================================================
# DEVELOPMENT/TESTING CONFIGURATIONS
# =============================================================================

# Set to 'true' to enable debug mode (additional logging)
DEBUG_MODE=false

# Set to 'true' to use mock data instead of real API calls
USE_MOCK_DATA=false

# Test email recipient (for testing email delivery)
TEST_EMAIL_RECIPIENT=test@erify.com